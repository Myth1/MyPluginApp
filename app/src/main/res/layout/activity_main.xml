<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv_loadPluginActivity"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="26sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:text="加载Activity插件"
            app:layout_constraintBottom_toTopOf="@+id/tv_loadPluginService"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_loadPluginService"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_openPluginActivity"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:text="加载Service插件"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_loadPluginActivity"
            app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
            android:id="@+id/tv_openPluginActivity"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_openPluginservice"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:text="启动插件Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_loadPluginService"
            app:layout_constraintRight_toRightOf="parent"
    />


    <TextView
            android:id="@+id/tv_openPluginservice"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="26sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:text="启动插件中的service"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_openPluginActivity"
            app:layout_constraintRight_toRightOf="parent"
    />
</android.support.constraint.ConstraintLayout>